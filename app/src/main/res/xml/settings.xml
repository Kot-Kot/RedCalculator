<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/does_save_values"
        android:summary="Do you want to save the values of calculator's text fields even when the app is closed?"
        android:title="Save status">

    </CheckBoxPreference>


    <ListPreference
        android:key="@string/text_sizes"
        android:title="Text size"
        android:summary="Change text size for buttons"
        android:defaultValue="30"
        android:entries="@array/text_sizes"
        android:entryValues="@array/text_sizes"
        android:dialogTitle="Choose text size for buttons">


    </ListPreference>

</PreferenceScreen>